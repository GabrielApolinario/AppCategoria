@model IEnumerable<AppRoute66.Models.Noticia>
@{
    ViewBag.Title = "Categoria";
}

<h2>Mostra Categoria</h2>

<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>                 @*rotulo, action e controller*@
                @Html.ActionLink(item.Titulo, "MostrarNoticia", "Home", new
           {
               @noticiaid = item.NoticiaId,
               @categoria = item.Categoria.ToLower(),
               @titulo = item.Titulo.ToLower()
           }, null);
           
                @*DisplayFor serve para mostrar informações na tela, neste caso recebendo parametros da model*@
                <em>@Html.DisplayFor(modelItem => item.Categoria)</em>
                <b>@Html.DisplayFor(modelItem => item.Data)</b>
            </li>
        }
    </ul>
    @*Especificando a seção rodapeEspecifico para que seja passada só nessa página*@
    @section rodapeEspecifico{
            <b>Se persistirem os sintomas o professor deverá ser consultado</b>
        }

</div>